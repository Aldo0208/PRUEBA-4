@model WebApplication4.ViewModels.CategoriaProductoViewModel

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>
@using (Html.BeginForm())
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(x => Model.categoria.NombreCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.DropDownListFor(x => Model.categoria.IdCategoria, new SelectList(Model.ListaCategorias, "IdCategoria", "Descripcion"), htmlAttributes: new { @class = "form-control", id = "ddlCategorias" })
                @Html.ValidationMessageFor(x => x.categoria.NombreCategoria, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </div>
    </div>
    if (Model.ListaProductos != null)
    {
        @Html.Partial("_Productos", Model.ListaProductos)
    }
}